# Application
APP_NAME="Ashbrooke CRM"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ashbrooke_crm
DB_USERNAME=root
DB_PASSWORD=

# Broadcasting
BROADCAST_DRIVER=log

# Cache
CACHE_DRIVER=file
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=database

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Mail Configuration (Namecheap Email)
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Stripe Configuration
STRIPE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Subscriptions
STRIPE_SUBSCRIPTION_PRICE_ID=price_your_subscription_price_id
STRIPE_DEFAULT_PRICE=9.99

# Twilio Configuration (SMS)
TWILIO_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SID=your_twilio_verify_sid

# SendGrid Configuration (Marketing Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=marketing@yourdomain.com
SENDGRID_FROM_NAME="${APP_NAME}"

# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=mixtral-8x7b-32768

# Google Calendar API (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Microsoft Graph API for Outlook (Optional)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI="${APP_URL}/auth/microsoft/callback"

# Tax API (Future Integration)
# TAXJAR_API_KEY=your_taxjar_api_key
# AVALARA_ACCOUNT_ID=your_avalara_account_id
# AVALARA_LICENSE_KEY=your_avalara_license_key

# Shipping API (Future Integration)
# SHIPSTATION_API_KEY=your_shipstation_api_key
# SHIPSTATION_API_SECRET=your_shipstation_api_secret
# EASYPOST_API_KEY=your_easypost_api_key

# Notification Limits
SMS_DAILY_LIMIT=100
SMS_MONTHLY_LIMIT=500
EMAIL_DAILY_LIMIT=100

# Subscription Settings
SUBSCRIPTION_GRACE_PERIOD_DAYS=14
DATA_RETENTION_DAYS=365

# PWA Settings
PWA_NAME="${APP_NAME}"
PWA_SHORT_NAME="Ashbrooke"
PWA_THEME_COLOR="#E91E63"
PWA_BACKGROUND_COLOR="#FFFFFF"

# File Upload Limits
MAX_UPLOAD_SIZE=10240
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Security
SESSION_SECURE_COOKIE=false
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# Timezone
APP_TIMEZONE=America/New_York

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
